---
layout: main
---

<article class="blog-post">

    <h1>{{ title }}</h1>
    <i class="bi bi-calendar-heart"></i> <time datetime="{{ page.date | dateIso }}">{{ page.date | dateReadable }}</time> | 
    {% if tags %}
    {% for tag in tags %}
      {% if tag != "blog" and tag != "posts" %}
        <a href="/blog/tags/{{ tag | slug }}/">#{{ tag }}</a>{% if not loop.last %}, {% endif %}
      {% endif %}
    {% endfor %}

  {% endif %}

  
  <div class="blog-content">
    {{ content | safe }}
  </div>
  
</article>

<a href="/blog">← back to blog</a>
<br><br>
<nav class="post-navigation">
  <div class="prev-post">
    {% set previousPost = collections.blog | getPreviousCollectionItem(page) %}
    {% if previousPost %}
      <a href="{{ previousPost.url }}">← {{ previousPost.data.title }}</a>
    {% endif %}
  </div>
  <div class="next-post">
    {% set nextPost = collections.blog | getNextCollectionItem(page) %}
    {% if nextPost %}
      <a href="{{ nextPost.url }}">{{ nextPost.data.title }} →</a>
    {% endif %}
  </div>
</nav>